<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="http://jsbsim.sf.net/JSBSimScript.xsl"?>
<runscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://jsbsim.sf.net/JSBSimScript.xsd"
    name="Descent flight in Gloster Meteor F.3.">

  <description>
    This script attempts to duplicate the note found at http://www.pprune.org/archive/index.php/t-70987.html
     Drop full flap approaching the glide-path, set the speed at about 125(mph),
     vsi at about 250 fpm down and revs at about 11,000.
     
     This should be:
   propulsion/engine[0]/rpm = 11000
   propulsion/engine[1]/rpm = 11000
   velocities/vt-fps = 183
   flight-path/gamma-rad = -0.0227
   velocities/v-down-fps = 4.2
     
  </description>

  <use aircraft="gloster-meteor-jsb" initialize="descent_init"/> 

  <run start="0" end="90" dt="0.008333">

    <property value="0.01"> simulation/notify-time-trigger </property>

    <event name="Set engines running">
      <condition> simulation/sim-time-sec le 0.1 </condition>
      <set name="propulsion/engine[0]/set-running" value="1"/>
      <set name="propulsion/engine[1]/set-running" value="1"/>
      <set name="fcs/throttle-cmd-norm[0]" value=".53"/>
      <set name="fcs/throttle-cmd-norm[1]" value=".53"/>
      <set name="fcs/flap-cmd-norm[0]" value="1.0"/>
      <set name="fcs/flap-pos-norm[0]" value="1.0"/>
      <set name="gear/gear-cmd-norm" value="1"/>
      <set name="gear/gear-pos-norm" value="1"/>
      <notify/>
    </event>

    <event name="Engage Pilot">
      <condition> simulation/sim-time-sec gt 1</condition>
      <set name="ap/afcs/theta-trim-rad" value="0.04"/>
      <set name="ap/afcs/psi-trim-rad" value="3.927"/>
      <set name="ap/afcs/phi-trim-rad" value="0.0"/>
      <set name="ap/afcs/pitch-channel-active-norm" value="40"/>
      <set name="ap/afcs/yaw-channel-active-norm" value="10"/>
      <set name="ap/afcs/roll-channel-active-norm" value="10"/>
      <notify/>
    </event>
    
    <event name="Touch Down!">
      <condition> gear/unit[1]/WOW gt 0.5</condition>
      <set name="fcs/throttle-cmd-norm[0]" value="0"/>
      <set name="fcs/throttle-cmd-norm[1]" value="0"/>
      <notify>
        <property>position/h-agl-ft</property>
        <property>velocities/vt-fps</property>
        <property>velocities/mach</property>
        <property>attitude/phi-rad</property>
        <property>attitude/theta-rad</property>
        <property>attitude/psi-rad</property>
        <property>flight-path/gamma-rad</property>
        <property>velocities/v-down-fps</property>
        <property>fcs/elevator-pos-rad</property>
      </notify>
    </event>
        

    <!--
      For "do_simple_trim" (Classic trim):
      0: Longitudinal
      1: Full
      2: Ground
      3: Pullup
      4: Custom
      5: Turn
      6: None
    <event name="Trim">
      <condition> simulation/sim-time-sec gt 0.1 </condition>
      <set name="simulation/do_simple_trim" value="0"/>
      <delay>5.0</delay>
      <notify>
        <property>propulsion/engine[0]/n2</property>
        <property>propulsion/engine[1]/n2</property>
        <property>propulsion/engine[0]/thrust-lbs</property>
        <property>propulsion/engine[1]/thrust-lbs</property>
        <property>velocities/vc-kts</property>
        <property>velocities/vc-fps</property>
        <property>velocities/vt-fps</property>
        <property>attitude/phi-rad</property>
        <property>attitude/theta-rad</property>
        <property>attitude/psi-rad</property>
      </notify>
    </event>
    -->

    <event name="Repeating Notify" persistent="true">
      <description>Output message at 5 second intervals</description>
      <notify>
        <property>propulsion/engine[0]/rpm</property>
        <property>propulsion/engine[1]/rpm</property>
        <property>propulsion/engine[0]/thrust-lbs</property>
        <property>propulsion/engine[1]/thrust-lbs</property>
        <property>position/h-agl-ft</property>
        <property>velocities/vt-fps</property>
        <property>velocities/mach</property>
        <property>attitude/phi-rad</property>
        <property>attitude/theta-rad</property>
        <property>attitude/psi-rad</property>
        <property>flight-path/gamma-rad</property>
        <property>velocities/v-down-fps</property>
        <property>fcs/elevator-pos-rad</property>
        <property>fcs/flap-pos-norm</property>
        <property>gear/gear-pos-norm</property>
      </notify>
      <condition> simulation/sim-time-sec >= simulation/notify-time-trigger </condition>
      <set name="simulation/notify-time-trigger" value="10" type="FG_DELTA"/>
    </event>

  </run>

</runscript>
