<?xml version="1.0"?>

<!-- Radio Panel -->

<PropertyList>

 <path>radio_panel.ac</path>


<animation>
  <type>scale</type>
  <x-offset>0.60</x-offset>
  <y-offset>0.60</y-offset>
  <z-offset>0.60</z-offset>
 </animation>
<!-- Top Section -->

