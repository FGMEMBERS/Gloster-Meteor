<?xml version="1.0"?>
<PropertyList>
    <path>gun-switch.ac</path>

<animation>
  <type>scale</type>
  <x-offset>0.60</x-offset>
  <y-offset>0.60</y-offset>
  <z-offset>0.60</z-offset>
 </animation>

    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>7</max-m>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Switch</object-name>
        <property>/controls/armament/gunsight/power-on</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>-1</ind>
                <dep>-25</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>25</dep>
            </entry>
        </interpolation>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Switch</object-name>
        <object-name>switch-body-1</object-name>
        <object-name>switch-body-2</object-name>
        <object-name>switch-body-3</object-name>
        <object-name>switch-body-4</object-name>
        <emission>
            <factor-prop>controls/lighting/cabin-norm</factor-prop>
            <red>0.2</red>
            <green>0.15</green>
            <blue>0.15</blue>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>face</object-name>
        <emission>
            <factor-prop>controls/lighting/cabin-norm</factor-prop>
            <red>0.25</red>
            <green>0.2</green>
            <blue>0.2</blue>
        </emission>
    </animation>

</PropertyList>